<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".sign.RegisterActivity">

    <EditText
        android:id="@+id/edID"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="ID "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edPW"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@id/edID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="PW "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edNAME"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edPW"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="이름 "/>

    <EditText
        android:id="@+id/edNICKNAME"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edNAME"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="닉네임 "/>
    <LinearLayout
        android:id="@+id/linearLayoutSEX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edNICKNAME"
        android:layout_alignStart="@id/edNICKNAME"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/textViewSEX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별 : "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
        <RadioGroup
            android:id="@+id/radioGroupSEX"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_sex_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"
                android:textSize="17sp"
                />
            <RadioButton
                android:id="@+id/radio_sex_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"
                android:textSize="17sp"
                />
        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutSEX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#0088BD"
        android:text="join" />


</RelativeLayout>
