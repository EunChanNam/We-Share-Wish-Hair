<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".review.WriteReviewActivity"
    android:orientation="vertical">
<!--    topBar -->
    <include layout="@layout/top_bar_title" />
<!--    style info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
<!--        ImageView.setClipToOutline(true) -->
        <ImageView
            android:id="@+id/hairStyleImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:background="@drawable/border_hair_imageview_round"
            android:backgroundTint="@color/unselect_blue"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/write_tv_hairStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="헤어스타일 이름"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/review_my_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#태그들"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<!--    <hr> -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />
<!--    grade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_review_message_1"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_review_massage_2" />
        <RatingBar
            android:id="@+id/write_review_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Indicator"/>
    </LinearLayout>
<!--    <hr> -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />
<!--    image -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_margin="20dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/write_review_addPicture"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/write_review_plus" />

    </LinearLayout>

<!--    <hr> -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

<!--    content -->
    <EditText
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/border_write_review_content"
        android:hint="@string/write_review_massage_3" />

<!--    submit -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"
        android:text="@string/write_review_submit" />
</LinearLayout>