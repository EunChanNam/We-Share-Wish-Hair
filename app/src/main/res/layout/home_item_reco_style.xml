<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">
<!--    hair Image -->
    <ImageView
        android:id="@+id/home_item_rec_hairImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="20dp" />

<!--    Style, heart -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">
        <TextView
            android:id="@+id/home_item_rec_hairStyle"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="hairStyle íŽŒ"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/heart_fill"
            android:layout_toStartOf="@id/home_item_rec_heartCount"/>
        <TextView
            android:id="@+id/home_item_rec_heartCount"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text="504"
            android:textSize="20sp"/>

    </RelativeLayout>

</LinearLayout>